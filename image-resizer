    <script>
        // JavaScript Functionality
        const resizeSlider = document.getElementById('resizeSlider');
        const resizeValue = document.getElementById('resizeValue');
        const imageInput = document.getElementById('imageInput');
        const resizeButton = document.getElementById('resizeButton');
        const rotateButton = document.getElementById('rotateButton');
        const output = document.getElementById('output');
        const resizedImage = document.getElementById('resizedImage');
        const downloadButton = document.getElementById('downloadButton');
        const loader = document.getElementById('loader');

        let currentImage = null;
        let rotationAngle = 0;

        // Update slider value display
        resizeSlider.addEventListener('input', function() {
            resizeValue.textContent = `${resizeSlider.value}%`;
        });

        // Handle image upload
        imageInput.addEventListener('change', function() {
            const file = imageInput.files[0];
            const reader = new FileReader();

            reader.onload = function(e) {
                currentImage = new Image();
                currentImage.src = e.target.result;
                currentImage.onload = function() {
                    resizedImage.src = currentImage.src;
                };
            };

            reader.readAsDataURL(file);
        });

        // Resize Image
        resizeButton.addEventListener('click', function() {
            if (!currentImage) {
                alert('Please select an image file.');
                return;
            }

            // Show loader
            loader.style.display = 'block';
            output.style.display = 'none';

            const scale = resizeSlider.value / 100;
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');

            canvas.width = currentImage.width * scale;
            canvas.height = currentImage.height * scale;

            ctx.drawImage(currentImage, 0, 0, canvas.width, canvas.height);

            const resizedImageData = canvas.toDataURL('image/jpeg', 0.9);
            resizedImage.src = resizedImageData;

            // Hide loader and show output
            loader.style.display = 'none';
            output.style.display = 'block';

            // Show download button
            downloadButton.style.display = 'block';
            downloadButton.onclick = function() {
                const link = document.createElement('a');
                link.href = resizedImageData;
                link.download = 'resized-image.jpg';
                link.click();
            };
        });

        // Rotate Image
        rotateButton.addEventListener('click', function() {
            if (!currentImage) {
                alert('Please select an image file.');
                return;
            }

            // Show loader
            loader.style.display = 'block';
            output.style.display = 'none';

            rotationAngle = (rotationAngle + 90) % 360;

            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');

            if (rotationAngle === 90 || rotationAngle === 270) {
                canvas.width = currentImage.height;
                canvas.height = currentImage.width;
            } else {
                canvas.width = currentImage.width;
                canvas.height = currentImage.height;
            }

            ctx.translate(canvas.width / 2, canvas.height / 2);
            ctx.rotate((rotationAngle * Math.PI) / 180);
            ctx.drawImage(currentImage, -currentImage.width / 2, -currentImage.height / 2);

            const rotatedImageData = canvas.toDataURL('image/jpeg', 0.9);
            resizedImage.src = rotatedImageData;

            // Hide loader and show output
            loader.style.display = 'none';
            output.style.display = 'block';

            // Show download button
            downloadButton.style.display = 'block';
            downloadButton.onclick = function() {
                const link = document.createElement('a');
                link.href = rotatedImageData;
                link.download = 'rotated-image.jpg';
                link.click();
            };
        });
    </script>
